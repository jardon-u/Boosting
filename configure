#!/bin/sh

if [ -f Makefile.rules ]; then
    rm Makefile.rules
fi

echo "CC=`which g++`" >> Makefile.rules

mkdir obj 2> /dev/null

case `uname` in
    "NetBSD" )
	echo -n "FLAG=-std=c++0x -Wall -W -ansi " >> Makefile.rules
	;;
    "SunOS" )
	echo -n "FLAG=-std=c++0x -Wall -W -ansi -pedantic" >> Makefile.rules
	echo "-m64" >> Makefile.rules
	;;
    "OSF1" )
	echo "FLAG=-std=c++0x -w2 -std1 -warnprotos" >> Makefile.rules
	;;
    "Linux" )
	echo "FLAG=-std=c++0x -Wall -W -pedantic" >> Makefile.rules
	;;
    "MacOSX" )
	echo -n "FLAG=-std=c++0x -Wall -W -ansi -pedantic" >> Makefile.rules
	echo " -fomit-frame-pointer" >> Makefile.rules
	;;
    "HP-UX" )
	echo "FLAG=-std=c++0x -Wall -W -ansi -pedantic" >> Makefile.rules
esac
